/dts-v1/;
/plugin/;

#include "exynos7904-a30_common.dtsi"
#include "exynos7904-a30_kor_single_gpio_01.dtsi"
#include "exynos7904-a30_fingerprint_00.dtsi"
#include "exynos7904-a30_kor-tdmb-00.dtsi"
#include "battery_data_a30_kor_single_common.dtsi"

/ {
	compatible = "samsung,A30 KOR SINGLE 01", "samsung,EXYNOS7904";

	dtbo-hw_rev = <1>;
	dtbo-hw_rev_end = <1>;


	fragment@model {
		target-path = "/";
		__overlay__ {
			#address-cells = <2>;
			#size-cells = <1>;

			model = "Samsung A30 KOR SINGLE 01 board based on EXYNOS7904";
		}; /* end of __overlay__ */
	}; /* end of fragment */
}; /* end of root */

&pinctrl_0 {	/*11CB0000*/
	nfc_clk: nfc-clk {
		samsung,pins = "gpq0-0";
		samsung,pin-function = <2>;
		samsung,pin-pud = <0>;
	};

	nfc_int: nfc-int {
		samsung,pins = "gpa1-0";
		samsung,pin-function = <0>;
		samsung,pin-pud = <1>;
	};
};

&pinctrl_3 {	/*139B0000*/
	nfc_pvdd_en: nfc_pvdd_en {
		samsung,pins = "gpp6-4";
		samsung,pin-function = <1>;
		samsung,pin-pud = <0>;
		samsung,pin-val = <0>;
		samsung,pin-con-pdn = <3>;
		samsung,pin-pud-pdn = <0>;
	};

	nfc_firm: nfc_firm {
		samsung,pins = "gpp3-2";
		samsung,pin-function = <1>;
		samsung,pin-pud = <0>;
		samsung,pin-val = <0>;
		samsung,pin-con-pdn = <3>;
		samsung,pin-pud-pdn = <0>;
	};

	nfc_pd: nfc_pd {
		samsung,pins = "gpp2-2";
		samsung,pin-function = <2>;
		samsung,pin-pud = <0>;
		samsung,pin-drv = <0>;
		samsung,pin-con-pdn = <3>;
		samsung,pin-pud-pdn = <0>;
	};

	nfc_clk_req: nfc_clk_req {
		samsung,pins = "gpp2-3";
		samsung,pin-function = <2>;
		samsung,pin-pud = <1>;
		samsung,pin-drv = <0>;
		samsung,pin-con-pdn = <3>;
		samsung,pin-pud-pdn = <0>;
	};

	nfc_det: nfc-det {
		samsung,pins = "gpg2-2";
		samsung,pin-function = <0>;
		samsung,pin-pud = <0>;
	};
};

&usi_0 {
	usi_mode = "hsi2c0_hsi2c1";
	status = "okay";
};

&hsi2c_5{
	status = "okay";
	clock-frequency = <400000>;
	sec-nfc@27{
		compatible = "sec-nfc";
		reg = <0x27>;

		interrupt-parent = <&gpa1>;
		interrupts = <0 0 0>;

		sec-nfc,nfc_pd = <&gpp2 2 0x2>;
		sec-nfc,firm-gpio = <&gpp3 2 1>;
		sec-nfc,irq-gpio = <&gpa1 0 0>;
		sec-nfc,nfc_clkreq = <&gpp2 3 0x2>;
		sec-nfc,pvdd_en = <&gpp6 4 1>;
		sec-nfc,check_nfc =<&gpg2 2 0x0>;
		clkctrl-reg = <0x11C8600C>;

		pinctrl-names = "default";
		pinctrl-0 = <&nfc_pd &nfc_firm &nfc_int &nfc_clk &nfc_pvdd_en &nfc_clk_req &nfc_det>;
	};
};

&i2c_6 {
 	        status = "okay";

 		#address-cells = <1>;
 		#size-cells = <0>;
 		samsung,i2c-sda-delay = <100>;
 		samsung,i2c-max-bus-freq = <400000>;
 		pinctrl-names = "default";
 		pinctrl-0 = <&i2c6_bus>;

 		lsm6dsl@6b {
 			compatible = "st,lsm6dsl";
 			reg = <0x6b>;
 			gpio-controller;
 			#gpio-cells = <2>;
 			pinctrl-names = "default";
 			pinctrl-0 = <&acc_int>;
 			interrupt-parent = <&gpa0>;
 			interrupts = <3 0 0>;
 			st,irq_gpio = <&gpa0 3 0>;
 			st,orientation = <0 1 1 1 0 1 1 1 2>;
 		};
 		
		ams_dax@39 {
			compatible = "ams,tcs3701";
			reg = <0x39>;
			ams,light_position = <51 81 2 59 1 80>;
		};

		yas539@2e {
			compatible = "yas_magnetometer";
			reg = <0x2e>;
			yas,orientation = <0>;
			yas,softiron = <9770 545 65 545 10120 20 65 20 10110>;
			yas,softiron_sign = <2 2 0 2 2 0 0 0 2>;
		};

};

&dwmmc_2 {
    card-detect-invert;
};
